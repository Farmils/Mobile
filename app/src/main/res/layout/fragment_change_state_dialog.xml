<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.ChangeStateFragmentDialog"
    app:cardCornerRadius="12dp"


    app:contentPadding="4dp"
    app:cardBackgroundColor="@color/PrimaryColorRed">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_by"
        android:textAppearance="@style/Subtittle2"
        android:textColor="@color/white"/>
    <RadioGroup
        android:id="@+id/ChangeStateGroup"
        android:padding="20dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/rounded_white_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
        android:id="@+id/NumberCheck"
           style="@style/RadioButtonStyle"
            android:textAppearance="@style/Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"/>

        <RadioButton
            android:id="@+id/NameCheck"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
           style="@style/RadioButtonStyle"/>
    </RadioGroup>
</LinearLayout>
</androidx.cardview.widget.CardView>